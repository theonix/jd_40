- model_class = DevicePosition
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:device_id) + ':'
  %br
  = @device_position.device_id
%p
  %strong= model_class.human_attribute_name(:lat) + ':'
  %br
  = @device_position.lat
%p
  %strong= model_class.human_attribute_name(:lng) + ':'
  %br
  = @device_position.lng
%p
  %strong= model_class.human_attribute_name(:route_id) + ':'
  %br
  = @device_position.route_id

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), device_position_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_device_position_path(@device_position), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), device_position_path(@device_position), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
