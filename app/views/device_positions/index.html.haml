- model_class = DevicePosition
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:device_id)
      %th= model_class.human_attribute_name(:lat)
      %th= model_class.human_attribute_name(:lng)
      %th= model_class.human_attribute_name(:route_id)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @device_positions.each do |device_position|
      %tr
        %td= link_to device_position.id, device_position_path(device_position)
        %td= device_position.device_id
        %td= device_position.lat
        %td= device_position.lng
        %td= device_position.route_id
        %td=l device_position.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_device_position_path(device_position), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), device_position_path(device_position), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_device_position_path, :class => 'btn btn-primary'
